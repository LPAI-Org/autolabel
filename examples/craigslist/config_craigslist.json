{
    "task_name": "CraigslistConversationClassification",
    "task_type": "classification",
    "dataset": {
        "label_column": "label",
        "delimiter": ","
    },
    "model": {
        "provider": "llama",
        "name": "/workspace/hf-refuel-llm"
    },
    "prompt": {
        "task_guidelines": "Given a text passage as input comprising of dialogue of negotiations between a seller and a buyer about the sale of an item, your task is to correctly classify the item being sold into one of the following categories: {labels}",
        "output_guidelines": "\\n",
        "labels": [
            "housing", "furniture", "bike", "phone", "car", "electronics"
        ],
        "few_shot_examples": "seed.csv",
        "few_shot_selection": "semantic_similarity",
        "few_shot_num": 9,
        "example_template": "Input: {example}.\nOutput: {label}"
    }
}